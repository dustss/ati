<!-- 记录的主体部分，涂色记录区域  -->
<view class='yourBack'>
  <view class='everyDay'   bindtouchmove='onTouchMoving'  >
    <view class="everyHalf" wx:for='{{half}}' wx:key="body" bindtap='onPainting' 

    id='{{index}}' style='background-color:{{item.paintColor}}'>
    </view>
  </view>


  <!--涂色工具区域  -->
  <view class='paintTools'>
    <view class='brush {{pen==index?"selected":""}}' wx:for='{{brushes}}' wx:key="tool" 
    bindtap='onPenSelected' 
    id='{{index}}' style='background-color:{{item.brushColor}}'> </view>
  </view>
</view>

